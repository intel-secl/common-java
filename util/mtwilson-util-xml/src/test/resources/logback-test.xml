<?xml version="1.0" encoding="UTF-8"?> 
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"> 
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
    
    <logger name="com.intel.dcsg.cpg.util" level="DEBUG"/>
    <logger name="com.intel.mtwilson.xml.ClasspathResourceResolver" level="TRACE"/>
    <logger name="com.intel.dcsg.cpg.classpath" level="INFO"/>
    
</configuration>
